{
  "name": "robofriends",
  "version": "0.1.3",
  "private": true,
  "config": {
    "imageName": "robofriends",
    "registry": "registry.tr0:31320",
    "k8s-namespace": "default"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.0",
    "tachyons": "^4.12.0",
    "web-vitals": "^2.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "docker-build": "docker build -t ${npm_package_config_registry}/${npm_package_config_imageName}:${npm_package_version} .",
    "docker-push": "docker push ${npm_package_config_registry}/${npm_package_config_imageName}:${npm_package_version}",
    "deploy": "kubectl set image deployment ${npm_package_config_imageName} ${npm_package_config_imageName}=${npm_package_config_registry}/${npm_package_config_imageName}:${npm_package_version} -n ${npm_package_config_k8s-namespace}",
    "build-and-deploy": "npm run -s build && npm run -s docker-build && npm run -s docker-push && npm run -s deploy"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
